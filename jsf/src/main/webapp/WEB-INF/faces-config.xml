<?xml version='1.0' encoding='UTF-8'?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<locale-config>
			<default-locale>en</default-locale>
		</locale-config>
	</application>

	<navigation-rule>
		<description> Navigation vom Kunden Formular aus. </description>
		<from-view-id>/jsp/kundeForm.jsp</from-view-id>
		<navigation-case>
			<description> Einziger Uebergang: Vom Formular zur Eingabe der
				Kundendaten
				zur Anzeige der erfolgreichen Erzeugung. </description>
			<from-outcome>success</from-outcome>
			<to-view-id>/jsp/kundeCreated.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>



</faces-config>
